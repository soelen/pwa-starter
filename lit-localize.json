{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/tsconfig.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de-DE"],
  "tsConfig": "tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "src/locales",
    "localeCodesModule": "src/locales/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "xliff"
  }
}
